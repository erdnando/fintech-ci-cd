node {

    checkout scm

    env.DOCKER_API_VERSION="1.23"
    
    sh "git rev-parse --short HEAD > commit-id"

    tag = "latest"   
    appName = "front-fintech"
    registryHost = ""
    imageName = "${registryHost}${appName}:${tag}"
    env.BUILDIMG=imageName

    stage "Build"
    
        sh "docker build -t erdnando/front-fintech:latest -f aplicaciones/01vuejs/Dockerfile aplicaciones/01vuejs"
    
    stage "Push"
        
        
         withDockerRegistry([ credentialsId: "docker-hub-credentials", url: "" ]) {
            sh "docker push erdnando/front-fintech:latest"
          }
          
      stage "Deploy"
      
          sh "kubectl delete deployment front-a"
          
          sh "kubectl delete service front-lb-a"
          
          sh "kubectl apply -f https://raw.githubusercontent.com/erdnando/fintech-ci-cd/master/front-a-deployment.yaml"

}
